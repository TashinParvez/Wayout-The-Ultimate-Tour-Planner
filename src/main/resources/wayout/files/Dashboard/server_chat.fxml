<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXScrollPane?>
<?import io.github.palexdev.materialfx.controls.MFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TextArea?>
<AnchorPane prefHeight="750.0" prefWidth="1020.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wayout.files.Dashboard.ServerChat">
    <AnchorPane prefHeight="100" prefWidth="1020">
        <Label alignment="CENTER" prefWidth="1020" style="-fx-background-color: red; -fx-font-family: 'Arial Rounded MT Bold'; -fx-font-size: 20px; -fx-text-fill: white" text="Helpline" />
    </AnchorPane>
    <MFXScrollPane hbarPolicy="NEVER" layoutY="25" prefHeight="620" prefWidth="1020">
        <VBox fx:id="messageBodyVbox" prefWidth="1018" style="-fx-background-color: yellow" />
    </MFXScrollPane>
    <AnchorPane layoutY="650" prefHeight="100" prefWidth="1020" style="-fx-background-color: white">
        <MFXTextField fx:id="messageBox" floatMode="DISABLED" layoutX="250" layoutY="25" prefHeight="50" prefWidth="500" promptText="Write a message to send .." style="-fx-padding: 0 0 0 10px; -fx-font-size: 13px" />


        <MFXButton fx:id="sendBtn" layoutX="770" layoutY="25" prefHeight="50" prefWidth="100" style="-fx-background-color: white" text=" ">
            <graphic>
                <FontAwesomeIconView fill="black" glyphName="SEND" size="18" />
            </graphic>
        </MFXButton>
    </AnchorPane>

</AnchorPane>
